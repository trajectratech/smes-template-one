---
import { Icon } from "astro-icon/components";
import type { ThemeConfig } from "../types/theme";

export interface Props {
	data: ThemeConfig;
}

type SocialKey =
	| "instagram"
	| "facebook"
	| "tiktok"
	| "x"
	| "twitter"
	| "linkedin"
	| "pinterest"
	| "youtube";

const { data } = Astro.props;
const { socialMedia } = data;

const iconMap: Record<SocialKey, string> = {
	instagram: "mdi:instagram",
	facebook: "mdi:facebook",
	tiktok: "mdi:tiktok",
	x: "mdi:alpha-x-box", // Twitter (X)
	twitter: "mdi:twitter",
	linkedin: "mdi:linkedin",
	pinterest: "mdi:pinterest",
	youtube: "mdi:youtube",
};
---

<footer
	id="contact"
	aria-label="Footer"
	class="bg-[var(--color-heading)] text-[var(--color-background)] py-12 px-6 text-sm"
>
	<div class="max-w-4xl mx-auto flex flex-col gap-6 items-center text-center">
		<!-- Contact Info -->
		<div class="flex flex-col sm:flex-row gap-6 items-center justify-center">
			<a
				href={`mailto:${data.contact.email}`}
				class="flex items-center gap-2 hover:text-[var(--color-accent)] transition-colors"
				aria-label={`Email ${data.contact.email}`}
			>
				<Icon
					name="heroicons-outline:envelope"
					class="w-5 h-5"
					aria-hidden="true"
				/>
				<span>{data.contact.email}</span>
			</a>

			<a
				href={`tel:${data.contact.phone}`}
				class="flex items-center gap-2 hover:text-[var(--color-accent)] transition-colors"
				aria-label={`Call ${data.contact.phone}`}
			>
				<Icon
					name="heroicons-outline:phone"
					class="w-5 h-5"
					aria-hidden="true"
				/>
				<span>{data.contact.phone}</span>
			</a>
		</div>

		<!-- Social Media -->
		{
			Array.isArray(socialMedia) && socialMedia.length > 0 && (
				<nav aria-label="Social media links" class="mt-4">
					<ul class="flex gap-4 justify-center">
						{socialMedia.map((item) => {
							const iconKey = item.name.toLowerCase() as SocialKey;
							const icon = iconMap[iconKey] ?? "mdi:web";
							return (
								<li>
									<a
										href={item.url}
										target="_blank"
										rel="noopener noreferrer"
										aria-label={`Visit our ${item.name} page`}
										class="hover:scale-110 hover:text-[var(--color-accent)] transition-transform duration-200"
									>
										<Icon name={icon} class="w-6 h-6" aria-hidden="true" />
									</a>
								</li>
							);
						})}
					</ul>
				</nav>
			)
		}

		<!-- Divider -->
		<hr class="w-full border-t border-[var(--color-background)]/30 my-4" />

		<!-- Footer Note -->
		<p class="text-xs text-[var(--color-background)]/80">
			&copy; {new Date().getFullYear()}
			{data.brand.businessName} â€” Powered by{" "}
			<a
				href={data.poweredBy.url}
				class="underline hover:text-[var(--color-accent)]"
				target="_blank"
				rel="noopener noreferrer"
			>
				{data.poweredBy.title}
			</a>
		</p>
	</div>
</footer>
