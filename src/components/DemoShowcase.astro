---
// DemoShowcase.astro
import type { ThemeConfig } from "../types/theme";
export interface Props {
	data: ThemeConfig;
}
const demoShowcase = Astro.props.data.content.demoShowcaseSection;
---

{
	demoShowcase && (
		<section class="py-20 px-4 bg-[var(--color-background)] text-[var(--color-text)]">
			<div class="max-w-6xl mx-auto text-center">
				<h2 class="text-3xl md:text-4xl font-bold mb-12 text-[var(--color-heading)]">
					{demoShowcase.heading}
				</h2>
				<div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3">
					{demoShowcase.demos.map((demo) => (
						<a
							href={demo.url}
							target="_blank"
							class="block rounded-xl shadow-md bg-[var(--color-background)] hover:shadow-xl transition overflow-hidden"
						>
							{demo.screenshotUrl && (
								<img
									src={demo.screenshotUrl}
									alt={demo.title}
									class="w-full h-40 object-cover"
								/>
							)}
							<div class="p-4 text-left">
								<h3 class="font-semibold text-lg mb-1">{demo.title}</h3>
								{demo.description && (
									<p class="text-sm text-[var(--color-text)]">
										{demo.description}
									</p>
								)}
							</div>
						</a>
					))}
				</div>
			</div>
		</section>
	)
}
